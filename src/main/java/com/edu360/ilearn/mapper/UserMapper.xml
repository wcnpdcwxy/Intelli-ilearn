<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.edu360.ilearn.mapper.UserMapper">

    <resultMap type="com.edu360.ilearn.entity.User" id="user_result_map">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="nickname" column="nickname"/>
        <result property="stage" column="stage"/>
        <result property="phoneNum" column="phoneNum"/>
        <result property="status" column="status"/>
    </resultMap>

    <select id="findOne" parameterType="com.edu360.ilearn.entity.User" resultType="integer">
        SELECT COUNT(*) FROM user WHERE username = #{username} AND password = #{password}
    </select>

    <insert id="register" parameterType="com.edu360.ilearn.entity.User">
        INSERT INTO user (id, username, password, nickname, stage, phoneNum, status) VALUES (null, #{username}, #{password}, #{nickname}, #{stage}, #{phoneNum}, #{status})
    </insert>

    <update id="password" parameterType="com.edu360.ilearn.entity.User">
        UPDATE user SET status = #{status}, password = #{password} WHERE id = #{id}
    </update>

    <select id="findinfo" parameterType="Integer" resultType="user_result_map">
        SELECT * FROM user WHERE id = #{userId}
    </select>

</mapper>
